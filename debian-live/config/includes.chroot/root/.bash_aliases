# Bash aliases
#
alias la='ls -alh'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

alias df='df -h'
alias du='du -h'
alias mc='mc -x'

alias cp='cp -i'
alias mv='mv -i'
alias rm='rm -i'

alias vi='vi "+set noai" "+syn on" "+set bg=dark" "+set comments-=:#" "+set enc=utf-8"'
alias view='view "+set noai" "+syn on" "+set bg=dark" "+set comments-=:#" "+set enc=utf-8"'

